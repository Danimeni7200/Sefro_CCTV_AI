{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/lpr_result.schema.json",
  "title": "LPRResult",
  "type": "object",
  "required": ["timestamp", "camera_id", "plate_text", "confidence", "bbox"],
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "camera_id": { "type": "string" },
    "plate_text": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "bbox": {
      "type": "object",
      "required": ["x", "y", "w", "h"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "w": { "type": "number" },
        "h": { "type": "number" }
      }
    },
    "vehicle_color": { "type": ["string", "null"] },
    "vehicle_type": { "type": ["string", "null"] },
    "edge_image_path": { "type": ["string", "null"] }
  }
}



